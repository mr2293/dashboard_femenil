name: Update Google Sheet & Deploy Femenil Shiny App

on:
  schedule:
    # Run daily at 9:45 AM Mexico City time
    - cron: '45 15 * * *'
  workflow_dispatch:

permissions:
  contents: write

jobs:
  update-and-deploy:
    runs-on: ubuntu-latest

    steps:
      # 1) Checkout repo
      - name: Checkout repo
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
          persist-credentials: true

      # 2) Set up Python
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      - name: Install Python dependencies
        run: |
          python -m pip install --upgrade pip
          pip install requests

      # 3) Ensure data folder exists
      - name: Ensure data folder exists
        run: mkdir -p data

      # 4) Download Google Sheet
      - name: Download Google Sheet
        env:
          SHEET_ID_FEM: ${{ secrets.SHEET_ID_FEM }}
        run: python download_gsheet.py

      # 5) Commit & push updated sheet (if changed)
      - name: Commit and push updated sheet
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          git add data/cuestionario_femenil.xlsx
          if git diff --cached --quiet; then
            echo "No changes to commit."
          else
            git commit -m "chore: update femenil data sheet [skip ci]"
            git pull origin main --rebase
            git push origin main
          fi

      # 6) Build Docker image
      - name: Build Docker image
        run: docker build --pull -t dashboard_femenil .

      # 7) Deploy Shiny app inside Docker
      - name: Deploy to shinyapps.io
        env:
          SHINY_ACC_NAME: ${{ secrets.SHINY_ACC_NAME }}
          TOKEN: ${{ secrets.TOKEN }}
          SECRET: ${{ secrets.SECRET }}
        run: |
          docker run --rm \
            -e SHINY_ACC_NAME="${SHINY_ACC_NAME}" \
            -e TOKEN="${TOKEN}" \
            -e SECRET="${SECRET}" \
            dashboard_femenil
